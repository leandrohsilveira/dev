layout {
  default_tab_template {
    pane size=1 borderless=true {
      plugin location="tab-bar"
    }

    children

    pane size=1 borderless=true {
      plugin location="status-bar"
    }
  }

  tab name="Main" hide_floating_panes=true {

    pane name="IDE" command="nvim" close_on_exit=true

    floating_panes {
      pane name="Shell"
    }

  }
}
